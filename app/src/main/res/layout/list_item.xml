<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
            android:id="@+id/listViewPic"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
    <TextView
        android:id="@+id/listViewTitle"
        android:text="标题"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_toLeftOf="@id/listViewPic"
        android:layout_alignTop="@id/listViewPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/listViewSource"
        android:text="原创"
        android:textSize="12sp"
        android:textColor="#888"
        android:layout_below="@id/listViewTitle"
        android:layout_alignLeft="@id/listViewTitle"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/listViewNickname"
        android:text="作者"
        android:textSize="12sp"
        android:textColor="#888"
        android:layout_toRightOf="@id/listViewSource"
        android:layout_alignBaseline="@id/listViewSource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/listViewTime"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/listViewNickname"
        android:layout_alignBaseline="@id/listViewSource"
        android:text="12月10日12:34"
        android:textSize="12sp"
        android:textColor="#888"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>