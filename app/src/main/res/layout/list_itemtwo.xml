<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/listViewTwoTitle"
        android:text="标题sadadsadsadsadaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/listViewTwoSource"
        android:text="原创"
        android:textSize="12sp"
        android:textColor="#888"
        android:layout_below="@id/listViewTwoTitle"
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/listViewTwoNickname"
        android:text="作者"
        android:textSize="12sp"
        android:textColor="#888"
        android:layout_toRightOf="@id/listViewTwoSource"
        android:layout_alignBaseline="@id/listViewTwoSource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/listViewTwoTime"
        android:layout_margin="15dp"
        android:layout_toRightOf="@id/listViewTwoNickname"
        android:layout_alignBaseline="@id/listViewTwoSource"
        android:text="12月10日12:34"
        android:textSize="12sp"
        android:textColor="#888"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>