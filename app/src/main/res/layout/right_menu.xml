<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
    <ImageView
        android:id="@+id/toggle"
        android:src="@mipmap/searchbackbtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/slidingMenuTitle"
        android:text="茶百科"
        android:textSize="20sp"
        android:textColor="#888"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/slidingMenuHome"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/righttopbutton"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0f0"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp">
        <EditText
            android:id="@+id/search_content"
            android:drawableLeft="@mipmap/searchico"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:hint="关键字"
            android:layout_margin="5dp"
            android:background="@drawable/edit_shape"/>
        <Button
            android:id="@+id/menu_search"
            android:background="#0f0"
            android:layout_width="0dp"
            android:textColor="#fff"
            android:layout_weight="1"
            android:text="搜索"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="热门搜索: 茶"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/slidingMenuImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/shoucangjia"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_margin="10dp"
            android:text="收藏夹"
            android:layout_alignLeft="@id/slidingMenuImg"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>
    <TextView
        android:id="@+id/menu_collection"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="我的收藏"
        android:layout_marginLeft="5dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/menu_history"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:text="历史访问记录"
        android:gravity="center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/slidingMenuClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/shoucangjia"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_margin="10dp"
            android:text="关于客户端"
            android:layout_alignLeft="@id/slidingMenuClient"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:text="版权信息"
        android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:text="意见反馈"
        android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:text="用户登录"
        android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:text="退出登录"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"></LinearLayout>
</LinearLayout>